<MudNavMenu Class="@CssParent" Style="width: 100%;">

  @* tombol icon(home) dan close navmenu saat di layar smartphone  *@
  <MudHidden Breakpoint="Breakpoint.MdAndUp">
    <MudPaper Elevation="0" Class="d-flex justify-space-around" Style="width: 100%;">
      <MudLink Href="/">
        <MudImage Src="/logo.svg" Width="55" Height="50" />
      </MudLink>
      <MudIconButton Icon="@Icons.Material.Filled.Close" Color="Color.Inherit" @onclick="ToggleDrawParent" />
    </MudPaper>
  </MudHidden>

  <MudSpacer />

  @* tombol navigasi halaman  *@
  <MudPaper Elevation="0" Class="@CssChild">

    <MudLink Href="/login">
      <MudButton Variant="Variant.Outlined" Class="rounded-lg"
        Style="width:11rem; height:2.5rem; border:1px solid #5B4947; color: #5B4947;">Login
      </MudButton>
    </MudLink>

    <MudLink Href="/register">
      <MudButton Variant="Variant.Filled" DropShadow="false" Class="rounded-lg"
        Style="width:11rem; height:2.5rem; background-color: #FABC1D; color: #5B4947;">
        Register</MudButton>
    </MudLink>

  </MudPaper>

</MudNavMenu>

@code {
  [Parameter] public string CssParent { get; set; } = "";
  [Parameter] public string CssChild { get; set; } = "";
  [Parameter] public EventCallback Toggle { get; set; }

  private Task ToggleDrawParent()
  {
    return Toggle.InvokeAsync();
  }
}
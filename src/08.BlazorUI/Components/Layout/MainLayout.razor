@inherits LayoutComponentBase

<MudThemeProvider Theme="CustomTheme" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
  <MudAppBar Elevation="0" Color="Color.Transparent" Style="height:5.375rem;" class="d-flex justify-center px-13 py-8">

    <MudPaper Elevation="0" Width="100%" Class="d-flex justify-space-between">
      <MudLink Href="/">
        <MudImage Src="/logo.svg" Width="55" Height="50" />
      </MudLink>

      <MudHidden Breakpoint="Breakpoint.SmAndDown">
        <NavMenu CssParent="d-flex align-center" CssChild="d-flex gap-10" />
      </MudHidden>

      <MudHidden Breakpoint="Breakpoint.MdAndUp">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" OnClick="@((e) => DrawerToggle())" />
      </MudHidden>
    </MudPaper>

  </MudAppBar>

  <MudHidden Breakpoint="Breakpoint.MdAndUp">
    <MudDrawer @bind-Open="@_drawerOpen" Anchor="Anchor.Right">
      <NavMenu CssParent="d-flex flex-column align-center mt-5" CssChild="d-flex flex-column gap-3 mt-5"
        Toggle="DrawerToggle" />
    </MudDrawer>
  </MudHidden>


  <MudMainContent>
    @Body
  </MudMainContent>
</MudLayout>

@code {
  bool _drawerOpen = true;

  void DrawerToggle()
  {
    _drawerOpen = !_drawerOpen;
  }

  MudTheme CustomTheme = new MudTheme()
  {
    Typography = new Typography()
    {
      Default = new DefaultTypography()
      {
        FontFamily = new[] { "Montserrat", "Helvetica", "Arial", "sans-serif" }
      }
    }
  };
}
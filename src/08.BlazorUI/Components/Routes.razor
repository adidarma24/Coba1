<Router AppAssembly="@typeof(Program).Assembly">
    <Found Context="routeData">
        @if (isLoggedIn)
        {
            <RouteView RouteData="@routeData" DefaultLayout="typeof(Components.Layout.AfterLoginLayout)" />
        }
        else
        {
            <RouteView RouteData="@routeData" DefaultLayout="typeof(Components.Layout.MainLayout)" />
        }
        <FocusOnNavigate RouteData="routeData" Selector="h1" />
    </Found>
</Router>

@code {
    private bool isLoggedIn = false;
    void OnFakeLogin() => isLoggedIn = true;
    void OnFakeLogout() => isLoggedIn = false;
}